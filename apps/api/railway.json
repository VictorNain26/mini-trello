{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "apps/api/**/*",
      "package.json",
      "pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/api && npx prisma migrate deploy && node dist/index.js",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}