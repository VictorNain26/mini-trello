{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && pnpm install && pnpm --filter @mini-trello/web build",
    "watchPatterns": [
      "src/**/*",
      "public/**/*",
      "package.json",
      "vite.config.ts"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/web && pnpm preview",
    "numReplicas": 1
  }
}